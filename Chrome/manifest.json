{
  "manifest_version": 2,
  "name": "AlienTube (Alpha)",
  "short_name": "AlienTube",
  "description": "Reddit Comments for YouTube",
  "version": "0.5",
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
  "minimum_chrome_version": "22.0",
  "content_security_policy": "script-src 'self' https://pay.reddit.com; object-src 'self'",
  "options_page": "options.html",

  "content_scripts": [
    {
      "matches": ["*://youtube.com/watch*", "*://www.youtube.com/watch*"],
      "js": ["js/jquery-1.9.1.min.js", "js/purl.js", "js/snuownd.js", "js/underscore-min.js", "js/script.js"],
      "css": ["res/style.css"]
    }
  ],
  "permissions": [
    "http://www.youtube.com/",
    "https://www.youtube.com/",
    "http://youtube.com/",
    "https://youtube.com/",
    "http://www.reddit.com/",
    "https://pay.reddit.com/",
    "storage"
  ],

  "web_accessible_resources": [
    "js/jquery.min.map",
    "js/underscore-min.map",
    "res/style.css",
    "chrome_shared.css",
    "widgets.css",
    "js/options.js",
    "res/error.png",
    "res/strings.json"
  ]
}