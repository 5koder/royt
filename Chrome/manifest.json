{
  "manifest_version": 2,
  "name": "AlienTube for YouTubeâ„¢",
  "short_name": "AlienTube",
  "description": "Reddit Comments for YouTube",
  "author": "Delexious",
  "homepage_url": "http://alientube.co/",
  "version": "1.0",
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
  "minimum_chrome_version": "22.0",
  "content_security_policy": "script-src 'self' https://pay.reddit.com; object-src 'self'",
  "options_page": "options.html",

  "content_scripts": [
    {
      "matches": ["*://youtube.com/*", "*://www.youtube.com/*", "*://alientube.co/"],
      "js": ["js/jquery-1.9.1.min.js", "js/mustache.js", "js/snuownd.js", "js/script.js"],
      "css": ["res/style.css"]
    }
  ],
  "permissions": [
    "http://www.youtube.com/",
    "https://www.youtube.com/",
    "https://pay.reddit.com/",
    "storage"
  ],

  "web_accessible_resources": [
    "js/jquery.min.map",
    "js/underscore-min.map",
    "res/style.css",
    "chrome_shared.css",
    "widgets.css",
    "js/options.js",
    "res/error.png",
    "res/gplus.png",
    "res/duck.png",
    "res/templates.mustache",
    "res/strings.json",
    "icon128.png"
  ]
}