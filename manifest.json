{
  "manifest_version": 2,
  "name": "AlienTube (Pre-Alpha)",
  "short_name": "AlienTube",
  "description": "Reddit Comments for YouTube",
  "version": "0.1.2",
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
  "minimum_chrome_version": "22.0",
  "content_security_policy": "script-src 'self' https://pay.reddit.com; object-src 'self'",

  "content_scripts": [
    {
      "matches": ["*://youtube.com/watch*", "*://www.youtube.com/watch*"],
      "js": ["jquery-1.9.1.min.js", "purl.js", "underscore-min.js", "script.js"],
      "css": ["style.css"]
    }
  ],
  "permissions": [
    "http://www.youtube.com/",
    "https://www.youtube.com/",
    "http://youtube.com/",
    "webRequest",
    "https://youtube.com/",
    "http://www.reddit.com/",
    "https://pay.reddit.com/"
  ],
    
  "background": {
    "scripts": ["jquery-1.9.1.min.js", "background.js"]
  },

  "web_accessible_resources": [
    "jquery-1.9.1.min.js",
    "purl.js",
    "underscore-min.js",
    "jquery.min.map",
    "underscore-min.map",
    "style.css"
  ]
}